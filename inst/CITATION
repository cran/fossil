citHeader("To cite package 'fossil' in publications use:")

desc <- packageDescription("fossil")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
         title = "fossil: Palaeoecological and Palaeogeographical Analysis Tools",
         author = personList(as.person("Matthew J. Vavrek and Hans C. E. Larsson")),
         year = year,
         note = vers,

         textVersion =
         paste("Matthew Vavrek (",
               year,
               "). fossil: Palaeoecological and Palaeogeographical Analysis Tools. ",
               vers, ".", sep=""))


